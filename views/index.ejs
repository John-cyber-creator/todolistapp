<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <!-- Bootstrap -->
    <link rel="stylesheet" href="https://cdn.jsdelivr.net/npm/bootstrap@4.5.3/dist/css/bootstrap.min.css" integrity="sha384-TX8t27EcRE3e/ihU7zmQxVncDAy5uIKz4rEkgIXeMed4M0jlfIDPvg6uqKI2xXr2" crossorigin="anonymous">
    <title>To-Do List</title>
</head>
<body>
    <!-- A simple navbar -->
    <nav class="navbar navbar-expand-lg navbar-light bg-primary">
      <div class="container-fluid">
        <a class="text-light text-decoration-none font-weight-bold" href="/">Hello <%= user.name %>, </a>
        <button class="navbar-toggler" type="button" data-bs-toggle="collapse" data-bs-target="#navbarTogglerDemo03" aria-controls="navbarTogglerDemo03" aria-expanded="false" aria-label="Toggle navigation">
          <span class="navbar-toggler-icon"></span>
        </button>
        <a class="navbar-brand text-light m-auto font-weight-bold" href="/">-YOUR TO-DO LIST-</a>
        <a href="/users/logout" class="btn btn-light">Logout</a>
      </div>
    </nav>
    <!-- An input to add the tasks -->
    <div class="container">
        <form action="/" method="POST" class="m-auto">
            <div class="form-group m-5 d-flex justify-content-between">
                <label for="task" class="font-weight-bold mr-3">Task:</label>
                <input required type= "text" name="taskName" id="taskName" class="form-control">
                <button type="submit" class="btn btn-primary ml-2">Add</button>
            </div>
        </form>
    </div>
    <!-- Displaying Each Task -->
    <% tasks.forEach(task => { %>
        <%if (userId.toString() == task.creator.toString() ) { %>
      <div class="card w-50 m-auto">
          <div class="card-body d-flex justify-content-between">
              <h4 class="card-title text-capitalize"><%= task.taskName %></h4>
              <h6 class="card-subtitle text-muted mt-2">
                  <%= task.createdAt.toLocaleDateString() %> 
              </h6>
              <div>
                  <form action="/<%= task._id %>?_method=DELETE" method="POST" class="d-inline">
                      <button type="submit" class="btn btn-success">Finish</button>
                  </form>
                  <form action="/<%= task._id %>?_method=DELETE" method="POST" class="d-inline">
                      <button type="submit" class="btn btn-danger">Delete</button>
                  </form>
              </div>
          </div>
      </div>
    <% } 
       }) %>
</body>
</html>